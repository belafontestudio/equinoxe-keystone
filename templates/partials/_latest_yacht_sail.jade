block section
  section.center.latest-grid.spacer
    .main-text.left
      h1.smaller2
        block title-smaller2
          | Featured yachts for sale:
    .clear
    ul.latest-space-yachts
      each sail in data.sails.results
        li
          block photo1
            if sail.thumbnail.filename
                img(src="/uploads/images/yachts/thumbnails/"+encodeURIComponent(sail.thumbnail.filename).replace(/\(/g, '%28').replace(/\)/g, '%29'), alt=sail.thumbnail.filename)
            else 
                img(src="/images/sprite/placeholder.png" alt="placeholder")
          h2.main-title
            block yacht-name1
              = sail.name
          ul.vertical-list
            li
              | <span class="uppercase">Price:</span> 
              block price1
                = sail.price+sail.currency
            li
              | <span class="uppercase">Length:</span> 
              block length1
                = sail.lenght
            li
              | <span class="uppercase">Built:</span> 
              block built1
                = sail.build
            li
              | <span class="uppercase">Guests:</span> 
              block guests1
                = sail.guests
            .clear
          .buttons
            a.button(href= "/yacht/"+sail.slug) Discover
      